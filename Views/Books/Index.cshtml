@model IEnumerable<BookManagerApp.Models.Book>
@{
    ViewBag.Title = "Book List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">📚 Book List</h2>
        @Html.ActionLink("➕ Add New Book", "Create", null, new { @class = "btn btn-success" })
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No books available. Add some to get started!
        </div>
    }
    else
    {
        <table class="table table-hover table-bordered shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>📘 Title</th>
                    <th>✍️ Author</th>
                    <th>📅 Year</th>
                    <th class="text-center">⚙️ Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Author</td>
                        <td>@item.Year</td>
                        <td class="text-center">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-primary me-1" })
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info me-1" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
