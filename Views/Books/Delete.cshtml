@model BookManagerApp.Models.Book
@{
    ViewBag.Title = "Delete Book";
}

<div class="container mt-4">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4>⚠️ Confirm Deletion</h4>
        </div>
        <div class="card-body">
            <p class="fw-bold mb-4">Are you sure you want to delete the following book?</p>

            <dl class="row">
                <dt class="col-sm-3">📘 Title:</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">✍️ Author:</dt>
                <dd class="col-sm-9">@Model.Author</dd>

                <dt class="col-sm-3">📅 Year:</dt>
                <dd class="col-sm-9">@Model.Year</dd>
            </dl>

            @using (Html.BeginForm("DeleteConfirmed", "Books", new { id = Model.Id }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="d-flex justify-content-between">
                    <input type="submit" value="🗑️ Yes, Delete" class="btn btn-danger" />
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-outline-secondary" })
                </div>
            }
        </div>
    </div>
</div>
