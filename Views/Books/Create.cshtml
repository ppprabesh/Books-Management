@model BookManagerApp.Models.Book
@{
    ViewBag.Title = "Add Book";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h4>➕ Add a New Book</h4>
        </div>
        <div class="card-body">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    @Html.LabelFor(m => m.Title, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Enter book title" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Author, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Author, new { @class = "form-control", placeholder = "Enter author name" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Year, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Year, new { @class = "form-control", placeholder = "Enter publication year" })
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">💾 Save Book</button>
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-outline-secondary" })
                </div>
            }
        </div>
    </div>
</div>
